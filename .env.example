# =============================================================================
# RESEARCH AGENTS HUB - Environment Configuration
# =============================================================================
# Скопируйте этот файл в .env и заполните нужными значениями
# Файл .env добавлен в .gitignore для безопасности

# =============================================================================
# ОБЩИЕ НАСТРОЙКИ ПРОЕКТА
# =============================================================================
PROJECT_NAME=research-agents-hub
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DVC НАСТРОЙКИ (Google Drive Remote Storage)
# =============================================================================
# Google Drive настроен как remote storage для воспроизводимости
DVC_REMOTE=gdrive_storage
# Google Drive ID уже настроен в .dvc/config: gdrive://133mVXq1xIxJMEDuN_7haphoHf8ZqD9g0
DVC_STUDIO_OFFLINE=true

# Для аутентификации Google Drive (если нужно)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# MLFLOW НАСТРОЙКИ
# =============================================================================
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=research_publications_classification
MLFLOW_SERVER_HOST=0.0.0.0
MLFLOW_SERVER_PORT=3000
MLFLOW_BACKEND_STORE_URI=file:./mlruns
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlartifacts

# =============================================================================
# ПАРАМЕТРЫ МОДЕЛИ (переопределяют params.yaml при необходимости)
# =============================================================================
# Feature Engineering
TFIDF_MAX_FEATURES=5000
NGRAM_RANGE_MIN=1
NGRAM_RANGE_MAX=2
MIN_DF=2
MAX_DF=0.95

# Model Training
MODEL_ALGORITHM=RandomForestClassifier
TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=3

# Random Forest параметры
RF_N_ESTIMATORS=100
RF_MAX_DEPTH=10
RF_MIN_SAMPLES_SPLIT=5
RF_MIN_SAMPLES_LEAF=2

# =============================================================================
# DOCKER НАСТРОЙКИ
# =============================================================================
DOCKER_IMAGE_NAME=research-agents-hub
DOCKER_IMAGE_TAG=latest
COMPOSE_PROJECT_NAME=research-agents-hub

# =============================================================================
# JUPYTER НАСТРОЙКИ (для development)
# =============================================================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=""
JUPYTER_ENABLE_LAB=true

# =============================================================================
# PYTHON И POETRY НАСТРОЙКИ
# =============================================================================
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONPATH=/app
POETRY_NO_INTERACTION=1
POETRY_VENV_IN_PROJECT=1
POETRY_CACHE_DIR=/tmp/poetry_cache

# =============================================================================
# НАСТРОЙКИ ВОСПРОИЗВОДИМОСТИ
# =============================================================================
DETERMINISTIC=true
SEED=42

# =============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# =============================================================================
N_JOBS=-1
MEMORY_LIMIT=4G
MAX_WORKERS=4

# =============================================================================
# ЛОГИРОВАНИЕ И МОНИТОРИНГ
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
ENABLE_MONITORING=false

# =============================================================================
# НАСТРОЙКИ ДЛЯ РАЗНЫХ ОКРУЖЕНИЙ
# =============================================================================
# Development
DEV_DATA_PATH=./data/dev
DEV_MODEL_PATH=./models/dev

# Production
PROD_DATA_PATH=./data/prod
PROD_MODEL_PATH=./models/prod

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================
# Timezone
TZ=UTC

# Locale
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# =============================================================================
# ВНЕШНИЕ API (при необходимости)
# =============================================================================
# Arxiv API settings
ARXIV_API_BASE_URL=http://export.arxiv.org/api/query
ARXIV_RATE_LIMIT=3

# OpenAI API (если используется для анализа текста)
# OPENAI_API_KEY=your-openai-api-key-here
